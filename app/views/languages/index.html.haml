- content_for :page_title do
  = "Document languages for HMCTS Form finder"

.grid-row
  .column-full

    = render partial: 'layouts/header', locals: { page_heading: t('language.plural') }

    = link_to t('language.add'), new_language_path, class: 'button', role: 'button'

    %h2.heading-medium
      = t('partial.currently')
      = pluralize(@active_languages.size, t('language.active.singular'), t('language.active.plural'))
      -if @inactive_languages.size > 0
        = t('partial.and')
        - if @active_languages.size > 10
          = link_to @inactive_languages.size.to_s + ' ' + t('label.inactive'), '#inactive_list'
        -else
          = @inactive_languages.size
          = t('label.inactive')

    - if @active_languages.size > 0

      .table-container.container
        %table#active_list
          %caption
            %span.table-caption
              = t('language.active.table_caption')
          %colgroup
            %col
            %col
            %col
            %col
          %thead
            %tr
              %th{scope:'col'}
                = t('helpers.label.language.english_name')
              %th{scope:'col'}
                = t('helpers.label.language.welsh_name')
              %th{scope:'col'}
                = t('helpers.label.language.code')
              %th{scope:'col'}
                = t('label.actions')
          %tbody
            - @active_languages.each do |language|
              %tr.item
                %td.english
                  = language.english_name
                %td.welsh
                  = language.welsh_name
                %td.code
                  = language.code
                %td.action
                  = link_to t('action.edit'), edit_language_path(language)

    - if @inactive_languages.size > 0

      .table-container.container
        %table#inactive_list
          %caption
            %span.table-caption
              = t('language.inactive_table_caption')
          %colgroup
            %col
            %col
            %col
            %col
          %thead
            %tr
              %th{scope:'col'}
                = t('helpers.label.language.english_name')
              %th{scope:'col'}
                = t('helpers.label.language.welsh_name')
              %th{scope:'col'}
                = t('helpers.label.language.code')
              %th{scope:'col'}
                = t('label.actions')
              %th
          %tbody
            - @inactive_languages.each do |language|
              %tr.item
                %td.english
                  = language.english_name
                %td.welsh
                  = language.welsh_name
                %td.code
                  = language.code
                %td.action
                  = link_to t('action.edit'), edit_language_path(language)
