= form_for @user do |f|

  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prevented this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :first_name
  = f.text_field :last_name
  = f.text_field :email
  = f.password_field :password

  .form-group
    %label.block-label.selection-button-checkbox{ for: "user_inactive" }
      Inactive
      = f.check_box(:inactive, {}, true)

  = f.submit 'Save', {class:"button", role:"button"}
