- content_for :page_title do
  = "Users in HMCTS Form finder"

.grid-row
  .column-full

    = render partial: 'layouts/header', locals: {page_heading: 'User accounts'}

    = link_to t('links.user.new'), new_user_path, class: 'button'

    .table-container.container
      %table.report
        %caption
          %span.table-caption
            = @users.size
            current users
        %colgroup
          %col
          %col
          %col
          %col
        %thead
          %tr
            %th{scope:'col'}
              = t('helpers.label.user.first_name')
            %th{scope:'col'}
              = t('helpers.label.user.last_name')
            %th{scope:'col'}
              = t('helpers.label.user.email')
            %th{scope:'col'}
              = t('label.inactive')
            %th
        %tbody
          - @users.each do | user |
            %tr
              %td
                = user.first_name
              %td
                = user.last_name
              %td
                = user.email
              %td
                = user.inactive ? 'Yes' : 'No'
              %td
                = link_to t('links.edit'), edit_user_path(user), {class:"button-secondary", role:"button"}
