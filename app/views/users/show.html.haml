- content_for :page_title do
  = "User accounts for HMCTS Form finder"

.grid-row
  .column-full

    = render partial: 'layouts/header', locals: {page_heading: 'User accounts'}

    %p
      First name:
      = @user.first_name

    %p
      Last name:
      = @user.last_name

    %p
      Email:
      = @user.email

    %p
      Inactive:
      = @user.inactive ? 'Yes' : 'No'

.grid-row
  .column-one-half
    = link_to 'Edit', edit_user_path(@user), class:'button-secondary', role:'button'
  .column-one-half
    = link_to 'Continue', users_path, class: 'button button-left-spacing', role:'button'
