- content_for :page_title do
  = "User accounts for HMCTS Form finder"

.grid-row
  .column-full

    = render partial: 'layouts/header', locals: { page_heading: t('user.summary') }

.grid-row
  .column-two-thirds

    %h3.heading-small
      = t('helpers.label.user.first_name')
    = @user.first_name

    %h3.heading-small
      = t('helpers.label.user.last_name')
    = @user.last_name

    %h3.heading-small
      = t('helpers.label.user.email')
    = @user.email

    %h3.heading-small
      = t('label.Inactive')
    = @user.inactive ? 'Yes' : 'No'

    .button-holder
      = link_to t('action.edit'), edit_user_path(@user), class: 'button-secondary', role: 'button'
      = link_to t('action.done'), users_path, class: 'button button-left-spacing', role: 'button'

  .column-one-third
