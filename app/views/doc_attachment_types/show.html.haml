- content_for :page_title do
  = "Document types for HMCTS Form finder"

.grid-row
  .column-full

    = render partial: 'layouts/header', locals: {page_heading: 'Document types'}

    - if @doc_attachment_type.english_name.present?
      %p
        = t('helpers.label.doc_attachment_type.english_name')+':'
        = @doc_attachment_type.english_name

    - if @doc_attachment_type.welsh_name.present?
      %p
        = t('helpers.label.doc_attachment_type.welsh_name')+':'
        = @doc_attachment_type.welsh_name

    %p
      = t('label.inactive')+':'
      = @doc_attachment_type.inactive ? 'Yes' : 'No'

.grid-row
  .column-one-half
    = link_to t('links.edit'), edit_doc_attachment_type_path(@doc_attachment_type), class: 'button-secondary', role: 'button'
  .column-one-half
    = link_to t('links.continue'), doc_attachment_types_path, class: 'button button-left-spacing', role: 'button'
