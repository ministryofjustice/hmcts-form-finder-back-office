- content_for :page_title do
  = "Types management for HMCTS Form finder"

= render partial: 'layouts/header', locals: {page_heading: 'Types management'}

.grid-row
  .column-full

    = link_to 'Create a new type', new_doc_attachment_type_path, class: 'button'

    .table-container.container
      %table.report
        %caption
          %span.table-caption
            = @doc_attachment_types.size
            types current available
        %colgroup
          %col
          %col
        %thead
          %tr
            %th{scope:'col'}
              = "English name"
            %th{scope:'col'}
              = "Welsh name"
            %th
            %th
        %tbody
          - @doc_attachment_types.each do |doc_attachment_type|
            %tr
              %td
                = doc_attachment_type.english_name
              %td
                = doc_attachment_type.welsh_name
              %td
                = link_to 'Edit', edit_doc_attachment_type_path(doc_attachment_type), {class:"button-secondary", role:"button"}
              %td
                = link_to 'Delete', doc_attachment_type, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'button-warning', role:"button"