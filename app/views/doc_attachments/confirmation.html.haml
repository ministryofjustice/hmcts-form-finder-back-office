.confirmation-header
  %h1.page-title.bold-large
    %object{:type => 'image/svg+xml', :data => image_path('icons/tick-white.svg'), :class => "confirmation-tick"}
    = "Successfully submitted"

  .normal
    = @doc_attachment.attachment_file_name

  .bold-medium
    = "To be published on"

  .bold-large
    = l @doc_attachment.published_date

.button-holder
  = link_to "Upload more documents", doc_attachments_new_path, {class: 'button', role: 'button'}
  = link_to "View your submissions", users_home_path, {class: 'button-secondary', role: 'button'}