- content_for :page_title do
  = "Forgot your password?"

= GovukElementsErrorsHelper.error_summary resource, "Please provide your email", ""

= render partial: 'layouts/header', locals: {page_heading: 'Forgot your password?'}

= form_for(resource, as: resource_name, url:  password_path(resource_name)) do |f|

  = f.email_field :email, autofocus: true

  .actions
    = f.submit "Send me reset password instructions", class: 'button'
