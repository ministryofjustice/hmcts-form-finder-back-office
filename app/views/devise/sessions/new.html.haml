- content_for :page_title do
  = "Sign in to HMCTS Form finder"

= GovukElementsErrorsHelper.error_summary resource, "Message to alert the user to a problem goes here", "Optional description of the errors and how to correct them"

= render partial: 'layouts/header', locals: {page_heading: 'Sign in'}

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

  = f.email_field :email, autofocus: true
  = f.password_field :password, autocomplete: "off"

  .actions
    = f.submit I18n.t('sign.in'), class: 'button'

= render "devise/shared/links"
