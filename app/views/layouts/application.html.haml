- content_for :logo_link_title do
  = "Return to home page"

- content_for :homepage_url do
  = root_path

- content_for :global_header_text do
  %nbsp

- content_for :head do
  %meta{:name =>"format-detection", :content => "telephone=no"}/

  = stylesheet_link_tag "application", media: "all"

- content_for :body_classes do
  = "controller-" + controller.controller_name

- content_for :proposition_header do
  .header-proposition
    .content
      %a#proposition-name{:href => root_path}
        %abbr{:title => "Her Majesty's Courts and Tribunals Service"} HMCTS
        = "Form finder"
      = render partial:  'shared/loginout'

= content_for :content do
  = csrf_meta_tags
  #page

    -if user_signed_in?
      .primary-nav-bar
        = render partial: 'shared/nav_bar'
    -else
      = render partial: 'shared/phase_banner'

    %main#content
      = render partial: 'layouts/flashes' unless flash.empty?
      = yield

-# content_for :footer_support_links do
  =# render partial: 'layouts/footer'

- content_for :body_end do
  = javascript_include_tag "application"
  javascript:
    (function (i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r;
      i[r] = i[r] || function () {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
      a = s.createElement(o),m = s.getElementsByTagName(o)[0];
      a.async = 1;
      a.src = g;
      m.parentNode.insertBefore(a, m)
    })
    (window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
    ga('create', 'UA-61690103-15', 'auto');
    ga('send', 'pageview');

= render template: 'layouts/govuk_template'
