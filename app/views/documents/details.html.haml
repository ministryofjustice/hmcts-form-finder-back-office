- content_for :page_title do
  = "Your document linking summary for HMCTS Form finder"

= render partial: 'layouts/header', locals: { page_heading: 'Summary' }

.grid-row

  .column-one-third
    %h2.heading-medium
      The document:

  .column-two-thirds
    %p
      %span.reference
        = @document.code
      %span.attributes
        = @document.language.english_name
        format
      %br
        = @document.title

- if @linkeddocuments.exists?

  .grid-row

    .column-one-third
      %h3.heading-medium
        Is linked to:

    .column-two-thirds
      %hr
      %ul.list
        - @linkeddocuments.each do |doc_attachment|
          %li
            %span.reference
              = doc_attachment.code
            %span.attributes
              = doc_attachment.language.english_name
              format
            %br
              = doc_attachment.title

      = link_to 'Link to another document', link_documents_link_path(:document => @document), { class:'button', role:'button' }

- if @linkedcategories.exists?

  .grid-row

    .column-one-third
      %h3.heading-medium
        Is in these categories:

    .column-two-thirds
      %hr
      %ul.list
        - @linkedcategories.each do |category|
          %li
            = category.category.english_name

      = link_to 'Assign to another category', link_document_categories_link_path(:document => @document), { class:'button', role:'button' }
