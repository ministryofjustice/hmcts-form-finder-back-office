- content_for :page_title do
  = "Document management for HMCTS Form finder"

= render partial: 'layouts/header', locals: {page_heading: 'Document management'}

.grid-row
  .column-full

    = link_to "Add a document", new_document_path, {class: "button", role: 'button'}

    .table-container.container
      %table.report
        %caption
          %span.table-caption
            = "Your submission history"
        %colgroup
          %col
          %col
          %col
        %thead
          %tr
            %th{scope:'col'}
              = "Code"
            %th{scope:'col'}
              = "Title"
            %th{scope:'col'}
              = "Publish date"
            %th
            %th
        %tbody
          - @documents.each do | doc_attachment   |
            %tr
              %td
                = doc_attachment.code
              %td
                = doc_attachment.title
              %td
                = l doc_attachment.published_date if doc_attachment.published_date.present?
              %td
                = link_to "Edit", edit_document_path(doc_attachment.id), {class:"button-secondary", role:"button"}
              %td
                = link_to "Delete", doc_attachment, :method => :delete, :data => {:confirm => "are you sure?"},  class: 'button-warning', role:'button'
