- content_for :page_title do
  = "Document management for HMCTS Form finder"

= render partial: 'layouts/header', locals: {page_heading: 'Documents'}

.grid-row
  .column-full

    = link_to "Add a document", new_document_path, {class: "button", role: 'button'}

    .table-container.container
      %table.report
        %caption
          %span.table-caption
            = "Your submission history"
        %colgroup
          %col
          %col
          %col
          %col
        %thead
          %tr
            %th{scope:'col'}
              = "Code"
            %th{scope:'col'}
              = "Title"
            %th{scope:'col'}
              = "Publish date"
            %th{scope:'col'}
              = "Inactive"
            %th
        %tbody
          - @documents.each do |item|
            %tr
              %td
                = item.code
              %td
                = item.title
              %td
                = l item.published_date if item.published_date.present?
              %td
                = item.inactive ? 'Yes' : 'No'
              %td
                = link_to item.file_format , item.attachment.url
              %td
                = link_to 'Edit', edit_document_path(item.id), {class: 'button-secondary', role: 'button'}
