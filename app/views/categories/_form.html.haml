.grid-row
  .column-two-thirds

    - if @category.errors.any?

      .error-summary{ role: 'group', 'aria-labelledby': 'error-summary-add-category', tabindex: '-1' }
        %h1#error-summary-add-category.heading-medium.error-summary-heading
          = t('error_count', count: @category.errors.count ) + t('category.submit_error')

        %ul.error-summary-list
          - @category.errors.full_messages.each do |msg|
            %li= msg

    = form_for @category do |f|

      .form-group
        = f.text_field :english_name

      .form-group
        = f.text_field :welsh_name

      .form-group
        %label.block-label.selection-button-checkbox{ for: 'category_inactive' }
          = f.check_box(:inactive, {}, true)
          = t('label.inactive')

      .button-holder
        = f.submit class: 'button', role: 'button'
        = link_to t('action.cancel'), categories_path, class: 'button-secondary button-left-spacing', role: 'button'

  .column-one-third
